<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StylingResourcesMAUI"
             x:Class="StylingResourcesMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

        <!--Definicion de recursos accesibles en toda la app -->
        <x:String x:Key="MyTitlePage">Titulo Global</x:String>
        <x:Double x:Key="DefaultFontSize">30</x:Double>
    </Application.Resources>
</Application>

