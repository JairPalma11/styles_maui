<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StylingResourcesMAUI.Resources.Styles.AppDarkTheme">
    <!-- default colors -->
    <!-- Escogimos 3 colores principales -->
    <Color x:Key="Primary">#3C0753</Color>
    <Color x:Key="Secondary">#720455</Color>
    <Color x:Key="Accent">#910A67</Color>

    <Color x:Key="BackgroundPageColor">Black</Color>

    <!-- Colores para los textos -->
    <Color x:Key="TextColor">White</Color>
    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="AccentTextColor">White</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>

</ResourceDictionary>
