<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Escogimos 3 colores principales -->
    <Color x:Key="Primary">#59B4C3</Color>
    <Color x:Key="Secondary">#211C6A</Color>
    <Color x:Key="Accent">#74E291</Color>

    <Color x:Key="BackgroundPageColor">#FAFAFA</Color>

    <!-- Colores para los textos -->
    <Color x:Key="TextColor">Black</Color>
    <Color x:Key="PrimaryTextColor">Black</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="AccentTextColor">Black</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>

</ResourceDictionary>

