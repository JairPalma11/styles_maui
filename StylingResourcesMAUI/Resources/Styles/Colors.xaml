<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- default colors -->
    <!-- Escogimos 3 colores principales -->
    <Color x:Key="Primary">#795548</Color>
    <Color x:Key="Secondary">#00838F</Color>
    <Color x:Key="Accent">#7C4DFF</Color>

    <Color x:Key="BackgroundPageColor">#FAFAFA</Color>

    <!-- Colores para los textos -->
    <Color x:Key="TextColor">Black</Color>
    <Color x:Key="PrimaryTextColor">White</Color>
    <Color x:Key="SecondaryTextColor">White</Color>
    <Color x:Key="AccentTextColor">White</Color>
    
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>

</ResourceDictionary>